# Production Environment Variables
# Убедитесь что эти значения безопасны и соответствуют вашей инфраструктуре

# Application
APP_NAME=AdminBackend
APP_ENV=production
APP_DEBUG=false
APP_KEY=base64:changeme123456789012345678901234567890123=
APP_URL=https://pickleflavor.info
APP_TIMEZONE=UTC

# Database (MySQL)
MYSQL_DATABASE=admin_db
MYSQL_USER=admin
MYSQL_PASSWORD=root
MYSQL_ROOT_PASSWORD=root
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=admin_db
DB_USERNAME=admin
DB_PASSWORD=root

# Backend Port
BACKEND_PORT=8000

# Frontend Configuration
NODE_ENV=production
NEXT_PUBLIC_API_URL=https://pickleflavor.info

# Sanctum (для API аутентификации)
SANCTUM_STATEFUL_DOMAINS=pickleflavor.info,www.pickleflavor.info
SESSION_DOMAIN=.pickleflavor.info

# Mail Configuration (если требуется)
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=587
MAIL_USERNAME=your_email
MAIL_PASSWORD=your_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@pickleflavor.info
MAIL_FROM_NAME="Admin Backend"

# Cache & Session
CACHE_DRIVER=database
SESSION_DRIVER=database
QUEUE_CONNECTION=database

# SSL Certificate Paths (монтируются из хоста)
SSL_CERT_PATH=/etc/letsencrypt/live/pickleflavor.info/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/pickleflavor.info/privkey.pem
