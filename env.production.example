# Production Environment Variables
# Скопируйте этот файл в .env.production и заполните реальными значениями

# Application
APP_NAME=AdminBackend
APP_ENV=production
APP_DEBUG=false
APP_URL=https://your-domain.com

# Database
MYSQL_DATABASE=admin_db
MYSQL_USER=admin
MYSQL_PASSWORD=your_secure_password_here
MYSQL_ROOT_PASSWORD=your_root_password_here
DB_CONNECTION=mysql

# Backend Port (optional, default: 8000)
BACKEND_PORT=8000

# Frontend Port (optional, default: 3000)
FRONTEND_PORT=3000

# API Configuration
NEXT_PUBLIC_API_URL=https://api.your-domain.com
# или если API на том же домене:
# NEXT_PUBLIC_API_URL=https://your-domain.com/api

# Sanctum (для API аутентификации)
SANCTUM_STATEFUL_DOMAINS=your-domain.com,www.your-domain.com
SESSION_DOMAIN=.your-domain.com

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.your-domain.com
MAIL_PORT=587
MAIL_USERNAME=your_email@your-domain.com
MAIL_PASSWORD=your_email_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@your-domain.com
MAIL_FROM_NAME=AdminBackend

# Cache & Session
CACHE_DRIVER=file
SESSION_DRIVER=file
QUEUE_CONNECTION=database

# Laravel Application Key (будет сгенерирован автоматически, если не указан)
# APP_KEY=
