# Production Environment Variables
# Скопируйте этот файл в .env и заполните реальными значениями
# Этот же файл используется для настройки как локального, так и production окружения

# Application
APP_NAME=AdminBackend
APP_ENV=production
APP_DEBUG=false
APP_KEY=
APP_URL=http://pickleflavor.info
APP_TIMEZONE=UTC

# Database (MySQL for both local and production)
MYSQL_DATABASE=admin_db
MYSQL_USER=admin
MYSQL_PASSWORD=your_secure_password_here
MYSQL_ROOT_PASSWORD=your_root_password_here
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=admin_db
DB_USERNAME=admin
DB_PASSWORD=your_secure_password_here

# Backend Port (optional, default: 8000)
BACKEND_PORT=8000

# Frontend Port (optional, default: 3000)
FRONTEND_PORT=3000

# Frontend Configuration
NODE_ENV=production
NEXT_PUBLIC_API_URL=http://pickleflavor.info

# Sanctum (для API аутентификации)
SANCTUM_STATEFUL_DOMAINS=pickleflavor.info,www.pickleflavor.info
SESSION_DOMAIN=.pickleflavor.info

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.your-domain.com
MAIL_PORT=587
MAIL_USERNAME=your_email@your-domain.com
MAIL_PASSWORD=your_email_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@your-domain.com
MAIL_FROM_NAME="${APP_NAME}"

# Cache & Session
CACHE_DRIVER=file
SESSION_DRIVER=file
QUEUE_CONNECTION=database
